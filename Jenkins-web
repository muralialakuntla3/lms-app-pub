pipeline {
    agent {
        node {
            label 'slave'
        }
    }
    environment {
        dockerhub = credentials('dockerhub')
    }
    stages {
        stage('Configure EKS Cluster') {
            steps {
                sh 'aws eks --region eu-west-1 update-kubeconfig --name lms-cluster'
            }
        }
        stage('Docker Build') {
            steps {
                sh 'cd webapp && docker build -t muralialakuntla3/webapp .'
            }
        }
        stage('Docker Login') {
            steps {
                sh 'echo $dockerhub_PSW | docker login -u $dockerhub_USR --password-stdin'
            }
        }
        stage('Docker Push') {
            steps {
                sh 'docker push muralialakuntla3/webapp'
            }
        }
        stage('Remove old docker images') {
            steps {
                sh 'docker rmi -f muralialakuntla3/webapp'
            }
        }
        stage('Update Kubernetes Deployment') {
            steps {
                sh 'cd webapp && kubectl apply -f frontend-deployment.yaml'
            }
        }
        stage('Update Kubernetes Load Balancer Service') {
            steps {
                sh 'cd webapp && kubectl apply -f frontend-load-balancer-service.yaml'
            }
        }
    }
}
